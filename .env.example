# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=leadership_assessment
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_STATEMENT_TIMEOUT=10000

# JWT Configuration
# REQUIRED: Generate with `openssl rand -base64 32`
JWT_SECRET=replace-with-random-secret-minimum-32-characters
JWT_EXPIRES_IN=24h

# Optional cookie domain for multi-subdomain deployments (example: .example.com)
COOKIE_DOMAIN=

# Seeding
# Required for seeding only. Never commit a value.
SEED_ADMIN_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Startup migration enforcement
REQUIRE_MIGRATIONS=false
